%h1 Editing pulse

= form_for @pulse do |f|
  - if @pulse.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pulse.errors.count, "error")} prohibited this pulse from being saved:"
      %ul
        - @pulse.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit 'Save'

= link_to 'Show', @pulse
\|
= link_to 'Back', pulses_path
